# SHL Assessment Recommendation System - Environment Variables
# Copy this file to .env and fill in your values

# Gemini API Key (Required)
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# API Configuration (Optional)
API_HOST=0.0.0.0
API_PORT=8000

# Streamlit Configuration (Optional)
API_URL=http://localhost:8000
USE_API_BY_DEFAULT=true

# Data Files (Optional - defaults shown)
CATALOG_FILE=data/shl_catalog_enriched.csv
FAISS_INDEX_FILE=data/shl_index.faiss
METADATA_FILE=data/shl_index.pkl

# Test/Production Files (Optional)
TEST_QUERIES_FILE=data/test_queries.csv
PREDICTIONS_OUTPUT=predictions.csv

# Timeout Configuration (Optional - in seconds)
GEMINI_API_TIMEOUT=30
API_REQUEST_TIMEOUT=60

# CORS Configuration (Optional - for production)
# Comma-separated list of allowed origins, e.g., "https://example.com,https://app.example.com"
# Use "*" to allow all origins (not recommended for production)
ALLOWED_ORIGINS=*

# Rate Limiting (Optional - for production)
# Format: "60/minute", "10/second", "100/hour"
RATE_LIMIT=60/minute
RATE_LIMIT_PER_MINUTE=60

# Logging Level (Optional - DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

